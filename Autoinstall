### RH/Fedora install ###
./configure --prefix=/usr --sysconfdir=/etc \
--localstatedir=/var --sbindir=/usr/sbin \
SYSINIT_START_CMD="chkconfig smb on" \
SYSINIT_STOP_CMD="chkconfig smb off" &&
make &&
make install
