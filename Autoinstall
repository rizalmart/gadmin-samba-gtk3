### systemd install ###
 ./configure --prefix=/usr --sysconfdir=/etc \
 --localstatedir=/var --sbindir=/usr/sbin \
 SYSINIT_START_CMD="systemctl enable samba" \
 SYSINIT_STOP_CMD="systemctl disable samba" &&
 make &&
 make install
